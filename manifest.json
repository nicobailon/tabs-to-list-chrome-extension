{
  "manifest_version": 3,
  "name": "Tabs to List",
  "version": "1.0.0",
  "description": "Export open tabs to organized markdown with AI-powered summaries using Claude",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "Tabs to List",
    "default_popup": "src/popup/popup.html",
    "default_icon": "icons/icon-48.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "downloads",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  }
}
